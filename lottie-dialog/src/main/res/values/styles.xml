<resources>

    <!--region Theme-->

    <style name="Theme.LottieDialog.DayNight" parent="@style/Theme.Material3.DayNight.Dialog.Alert" />

    <style name="Theme.LottieDialog.Light" parent="@style/Theme.Material3.Light.Dialog.Alert" />

    <style name="Theme.LottieDialog.Dark" parent="@style/Theme.Material3.Dark.Dialog.Alert" />

    <style name="Theme.LottieDialog.BottomSheet.DayNight" parent="@style/Theme.Material3.DayNight.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/Widget.LottieDialog.BottomSheet</item>
    </style>

    <style name="Theme.LottieDialog.BottomSheet.Light" parent="@style/Theme.Material3.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/Widget.LottieDialog.BottomSheet</item>
    </style>

    <style name="Theme.LottieDialog.BottomSheet.Dark" parent="@style/Theme.Material3.Dark.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/Widget.LottieDialog.BottomSheet</item>
    </style>

    <!--endregion-->
    <!--region ShapeAppearance-->

    <style name="ShapeAppearance.LottieDialog.BottomSheet" parent="ShapeAppearance.Material3.LargeComponent">
        <item name="cornerFamilyTopLeft">rounded</item>
        <item name="cornerFamilyTopRight">rounded</item>
        <item name="cornerSizeTopLeft">@dimen/lottie_dialog_corner_radius_bottom_sheet</item>
        <item name="cornerSizeTopRight">@dimen/lottie_dialog_corner_radius_bottom_sheet</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
    </style>

    <!--endregion-->
    <!--region Text Appearance-->

    <style name="TextAppearance.LottieDialog.Title" parent="TextAppearance.Material3.TitleLarge" />

    <style name="TextAppearance.LottieDialog.Content" parent="TextAppearance.Material3.BodyMedium" />

    <!--endregion-->
    <!--region Widget-->

    <style name="Widget.LottieDialog.BottomSheet" parent="@style/Widget.Material3.BottomSheet.Modal">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.LottieDialog.BottomSheet</item>
    </style>

    <style name="Widget.LottieDialog.AnimationView" parent="">
        <item name="android:scaleType">centerInside</item>
        <item name="lottie_autoPlay">true</item>
        <item name="lottie_loop">true</item>
    </style>

    <style name="Widget.LottieDialog.ProgressBar" parent="Widget.Material3.LinearProgressIndicator">
        <item name="android:indeterminate">false</item>
        <item name="android:progressTint">?attr/colorPrimary</item>
    </style>

    <style name="Widget.LottieDialog.EditText" parent="">
        <item name="android:background">@null</item>
        <item name="android:imeOptions">actionNone</item>
        <item name="android:maxLines">1</item>
        <item name="android:textCursorDrawable">@drawable/lottie_dialog_edit_text_cursor</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Headline6
        </item>
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>

    <style name="Widget.LottieDialog.CloseButton" parent="">
        <item name="android:background">@null</item>
        <item name="android:src">@drawable/lottie_dialog_ic_round_close_24dp</item>
    </style>

    <style name="Widget.LottieDialog.Confirmation.PositiveButton" parent="Widget.Material3.Button" />

    <style name="Widget.LottieDialog.Confirmation.NegativeButton" parent="Widget.Material3.Button.OutlinedButton" />

    <style name="Widget.LottieDialog.Input.ImageButton" parent="">
        <item name="android:background">@null</item>
        <item name="android:tint">?attr/colorPrimary</item>
    </style>

    <!--endregion-->

</resources>
