<resources>

    <style name="LottieDialogTheme.Dialog.Light" parent="@style/Theme.MaterialComponents.Light.Dialog.Alert" />
    <style name="LottieDialogTheme.Dialog.Dark" parent="@style/Theme.MaterialComponents.Dialog.Alert" />
    <style name="LottieDialogTheme.Dialog.DayNight" parent="@style/Theme.MaterialComponents.DayNight.Dialog.Alert" />

    <style name="LottieDialogTheme.BottomSheet.Light" parent="@style/Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowTranslucentNavigation">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">?attr/colorSurface</item>
        <item name="bottomSheetStyle">@style/LottieDialogTheme.BottomSheet.Style</item>
    </style>

    <style name="LottieDialogTheme.BottomSheet.Dark" parent="@style/Theme.MaterialComponents.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowTranslucentNavigation">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@color/color_navigation_bar</item>
        <item name="bottomSheetStyle">@style/LottieDialogTheme.BottomSheet.Style</item>
    </style>

    <style name="LottieDialogTheme.BottomSheet.DayNight" parent="@style/Theme.MaterialComponents.DayNight.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowTranslucentNavigation">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">?attr/colorSurface</item>
        <item name="bottomSheetStyle">@style/LottieDialogTheme.BottomSheet.Style</item>
    </style>

    <style name="LottieDialogTheme.BottomSheet.Style" parent="@style/Widget.MaterialComponents.BottomSheet.Modal">
        <item name="shapeAppearanceOverlay">@style/LottieDialogTheme.BottomSheet.ShapeAppearanceOverlay</item>
    </style>

    <style name="LottieDialogTheme.BottomSheet.ShapeAppearanceOverlay" parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerFamilyTopLeft">rounded</item>
        <item name="cornerFamilyTopRight">rounded</item>
        <item name="cornerSizeTopLeft">@dimen/lottie_dialog_corner_radius</item>
        <item name="cornerSizeTopRight">@dimen/lottie_dialog_corner_radius</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
    </style>

</resources>
